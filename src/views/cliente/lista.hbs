<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<div class="body">
  <nav class="nav-extended p1" style="background-color:#87AAAA; ">
    <div class="nav-wrapper p1">
      <a href="#" class="brand-logo p1" style="margin-left: 20px; color:black;"><b>Konstructiva app</b></a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger p1"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a style="color:white;" href="/proyecto/lista">Proyectos</a></li>
        <li><a style="color:black;" href="/cliente/lista">Clientes</a></li>
        <li><a style="color:white;" href="/ejecucion/contratost">Ejecucion</a></li>
        <li><a style="color:white;" href="collapsible.html">Personal</a></li>
        <li><a style="color:white;" href="/reportes/info-proyectos">Reportes</a></li>
        <li><a href="/login" class="btn btn-red"><b>Cerrar sesión </b></a></li>
      </ul>
    </div>
    <div class="nav-content p1">
      <ul class="tabs tabs-transparent">
        <li class="tab"><a style="color:black;" href="/cliente/lista">Lista de clientes</a></li>
        <li class="tab"><a class="active" style="color:white;" href="/cliente/add">Crear</a></li>
      </ul>
    </div>
  </nav>

  <div class="row" style="background-color: #F6D7A7;">
    {{#each clientes}}
    <div class="col-md-3" style="margin:30px">
      <div class="card" style="border: 5px solid #87AAAA; background:#F6EABE;">
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted p1" style="color: black;">
            <b>Nombre</b>
          </h6>
          <p>
            <i class="p1">{{this.dataValues.nombre}}</i>
          </p>
          <h6 class="card-subtitle mb-2 text-muted p1" style="color: black;">
            <b>Proyecto</b>
          </h6>
          <p>
            {{#if this.dataValues.proyecto}}
            <i style="color:black" class="p1">{{this.dataValues.proyecto.dataValues.namep}}</i>
            {{else}}
            <i clas="p1" style="color:black ;">No hay un proyecto asignado</i>
            {{/if}}
          </p>

          <h6 class="card-subtitle mb-2 text-muted p1" style="color: black;">
            <b>Cédula</b>
          </h6>
          <p>
            <i class="p1">{{this.dataValues.cedula}}</i>
          </p>
          <center>
            <a href="/cliente/modificar/{{this.dataValues.id}}" class="p1 btn btn-brown1 btn-lg"
              style="color:black; margin-top:15px; margin-bottom:14px;width:190px; height:38px" type="submit">
              <b>Editar</b>
            </a>
          </center>
          <center>
            <form action="/cliente/eliminar/{{this.dataValues.id}}?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button style="color:black; block;margin-top:5px; margin-bottom:14px;width:190px; height:38px"
                class="p1 btn btn-brown2 btn-block" type="submit">
                <b>Eliminar</b>
              </button>
            </form>
          </center>
          <center>
            <p>
              {{#if this.dataValues.proyecto}}
              {{else}}
              <button onclick="window.location.href='/cliente/{{this.dataValues.id}}/asignar'"
                style="color:black; display: block; margin: 0 auto; margin-top:15px; margin-bottom:14px;width:190px; height:38px"
                class="btn btn-brown" type="submit">
                <b class="p1">Asignar proyecto</b>
              </button>
              {{/if}}
            </p>
          </center>
        </div>
      </div>
    </div>
    {{else}}

    <div class="card mx-auto">
      <div class="card-body">
        <p class="lead p1" style="text-align: center;">
          Todavía no has registrado un cliente
        </p>
        <a href="/cliente/add" class="p1 btn btn-brown2 btn-block">
          Crear un cliente
        </a>
      </div>
    </div>
  </div>

  {{/each}}
</div>