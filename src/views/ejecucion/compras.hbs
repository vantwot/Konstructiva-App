        <div class="row" style="background-color: #F6D7A7;">
            {{#each proyectos}}
            <div class="col-md-3" style="margin:30px;">
                <div class="card" style="border: 5px solid #87AAAA; background:#F6EABE;">
                    <div class="card-body">
                        <h6 class="p1 card-subtitle mb-2 text-muted">
                            <b>Nombre Proyecto</b>
                        </h6>
                        <p>
                            <i>{{this.dataValues.namep}}</i>
                        </p>
                        <h6 class="p1 card-subtitle mb-2 text-muted">
                            <b>Anticipos</b>
                        </h6>
                        <p>
                            <i>{{this.dataValues.anticipo}}</i>
                        </p>
                        <center>
                            <form action="/ejecucion/subirArchivo/{{this.dataValues.id}}" method="POST"
                                enctype="multipart/form-data">
                                <div>
                                    <div class="form-group col s6" style="margin:25px;">
                                        <label style="color:black;margin-left: 15px; margin-top:15px;">link</label>
                                        <input type="text" style="margin-right:5px;" class="form-control" name="link">
                                        <button
                                            style="color:black;display: block;margin-bottom:14px;width:190px; height:38px"
                                            class="btn btn-brown btn-block" type="submit">
                                            Guardar factura
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </center>
                    </div>
                </div>
            </div>
            {{else}}
            <center>
                <div class="card mx-auto">
                <div class="card-body">
                    <p class="lead p1" style="text-align: center;">
                        Todavía no has registrado un proyecto
                    </p>
                    <a href="/proyecto/add" style="color:black" class="p1 btn btn-brown2 btn-block">
                        <b>Crear un proyecto</b>
                    </a>
                </div>
            </div>
        </div>
        </center>
        {{/each}}
</div>