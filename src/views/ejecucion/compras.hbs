        <div class="row" style="background-color: #F6D7A7;">
            {{#each proyectos}}
            <div class="col-md-3" style="margin:30px;">
                <div class="card" style="border: 5px solid #87AAAA; background:#F6EABE;">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">
                            Nombre Proyecto :
                        </h6>
                        <p>
                            {{this.dataValues.namep}}
                        </p>
                        <h6 class="card-subtitle mb-2 text-muted">
                            Anticipos :
                        </h6>
                        <p>
                            {{this.dataValues.anticipo}}
                        </p>
                        <p>
                            {{#if this.dataValues.facturas}}
                            {{this.dataValues.facturas.dataValues.Link}}
                            {{else}}
                            No hay un proyecto asignado
                            {{/if}}
                        </p>
                        <center>
                            <form action="/ejecucion/subirArchivo/{{this.dataValues.id}}" method="POST"
                                enctype="multipart/form-data">
                                <div>
                                    <div class="form-group col s6" style="margin:25px;">
                                        <label style="color:black;margin-left: 15px; margin-top:15px;">link</label>
                                        <input type="text" style="margin-right:5px;" class="form-control" name="link">
                                        <button
                                            style="color:black;display: block; margin: 0 auto; margin-top:30px; margin-bottom:25px;"
                                            class="btn btn-brown2 btn-block" type="submit">
                                            Guardar factura
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </center>
                    </div>
                </div>
            </div>
            {{else}}
            <center>
                <div class="card mx-auto">
                    <div class="card-body">
                        <p class="lead" style="text-align: center;">
                            Todavía no has creado un proyecto
                        </p>
                    </div>
                </div>
        </div>
        </center>
        {{/each}}
</div>