<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<div class="body">
    <nav class="nav-extended" style="background-color:#87AAAA; ">
        <div class="nav-wrapper">
            <a href="#" class=" brand-logo p1" style="margin-left: 20px; color:black;"><b>Konstructiva app</b></a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger p1"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a class="p1" style="color:white;" href="/proyecto/lista">Proyectos</a></li>
                <li><a class="p1" style="color:white;" href="/cliente/lista">Clientes</a></li>
                <li><a class="p1" style="color:black;" href="/ejecucion/contratost">Ejecucion</a></li>
                <li><a class="p1" style="color:white;" href="/personal/lista">Personal</a></li>
                <li><a class="p1" style="color:white;" href="/reportes/info-proyectos">Reportes</a></li>
                <a href="/login" class="btn btn-red p1"> <b>Cerrar sesión</b> </a>
            </ul>
        </div>
        <div class="nav-content">
            <ul class="tabs tabs-transparent p1">
                <li class="tab"><a style="color:white;" href="/ejecucion/contratost">Lista de contratos temporales</a></li>
                <li class="tab"><a style="color:white;" href="/ejecucion/crear-contratost">Crear contrato temporal</a></li>
                <li class="tab"><a class="active" href="/factura/crear" style="color: white;">Crear Factura</a></li>
                <li class="tab"><a style="color:white;" href="/factura/lista">Lista de facturas</a></li>
                <li class="tab disabled"><a style="color:black;" href="/ejecucion/modificar/:id">Modificar facturas</a></li>
            </ul>
        </div>
    </nav>

    {{#each errors}}
    <div class="ROBOTOSLAB">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{text}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    {{/each}}

    <div class="caja p1">
        <form action="/ejecucion/editarFactura/{{facturas.dataValues.id}}" method="POST">
            <h5 class="p1" style="color:black; margin-left:15px; margin-top:25px;"> <b>Editar factura</b></h5>
            <div class="form-group col s5" style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px; color:rgba(8, 7, 7, 0.993)"><b><i>Número de factura</i></b></label>
                <input type="text" style="margin-right:5px;" name="numero" class="form-control"
                    value="{{facturas.dataValues.numero}}" autofocus />
            </div>
            <div class="form-group col s5" style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px; color:black"><b><i>Nombre</i></b></label>
                <input type="text" style="margin-right:5px;" class="form-control" name="nombre"
                    value="{{facturas.dataValues.nombre}}" />
            </div>
            <div class="form-group col s5" style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px; color:black"><b><i>Direccion</i></b></label>
                <input type="text" style="margin-right:5px;" class="form-control" name="direccion"
                    value="{{facturas.dataValues.direccion}}" />
            </div>
            <div class="form-group col s5" style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px; color:black"><b><i>Ciudad</i></b></label>
                <input type="text" style="margin-right:5px;" class="form-control" name="ciudad"
                    value="{{facturas.dataValues.ciudad}}" />
            </div>
            <div class="form-group col s5" style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px; color:black"><b><i>Telefono</i></b></label>
                <input type="text" style="margin-right:5px;" class="form-control" name="telefono"
                    value="{{facturas.dataValues.telefono}}" />
            </div>

            <div class="form-group">
                <button style="color:black;display: block; margin: 0 auto; margin-top:30px; margin-bottom:25px;"
                    class="btn btn-brown2 btn-block p1" type="submit">
                    <b>Editar</b>
                </button>
            </div>
        </form>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        $('.datepicker').datepicker();
    });
</script>