<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<div class="body">
    <nav class="nav-extended" style="background-color:#87AAAA; ">
        <div class="nav-wrapper">
            <a href="#" class=" brand-logo" style="margin-left: 20px; color:black;">Konstructiva app</a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a style="color:white;" href="/proyecto/lista">Proyectos</a></li>
                <li><a style="color:white;" href="/cliente/lista">Clientes</a></li>
                <li><a style="color:rgb(255, 255, 255);" href="/ejecucion/contratost">Ejecucion</a></li>
                <li><a style="color:rgb(0, 0, 0);" href="/personal/lista">Personal</a></li>
                <li><a style="color:white;" href="/reportes/info-proyectos">Reportes</a></li>
                <li><a href="/login" class="btn btn-red">Cerrar sesión </a></li>

            </ul>
        </div>
        <div class="nav-content">
            <ul class="tabs tabs-transparent">
                <li class="tab">
                    <a style="color:white;" href="/personal/lista">Lista de personal</a>
                </li>
                <li class="tab">
                    <a class="active" style="color:black;" href="/personal/add">
                        Crear nuevo personal
                    </a>
                </li>
                
            </ul>
        </div>
    </nav>
    {{#each errors}}
    <div class="ROBOTOSLAB">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{text}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    {{/each}}

    <div class="caja">
        <form action="/personal/nuevo" method="POST">
            <h5 style="color:black; margin-left:15px; margin-top:25px;">Detalles del personal</h5>
            <div class="form-group col s5" style="margin:10px;">
                <label style="margin-left: 15px; margin-top:15px; color:black">Número del contrato</label>
                <input type="number" style="color:black;margin-right:5px;" name="numero" class="form-control"
                       autofocus />
            </div>
            <div class="form-grop" style="margin:10px;">
                <label style="color:black;margin-left: 15px; margin-top:15px;">Nombre del nuevo personal</label>
                <input onkeypress="return /[a-z ]/i.test(event.key)" style="background-color:#F6EABE;margin-right:5px;"
                       class="form-control" name="nombre">
            </div>
            <div class="form-group col s5" style="margin:10px;">
                <label style="margin-left: 15px; margin-top:15px; color:black">Cédula</label>
                <input type="number" style="color:black;margin-right:5px;" name="cedula" class="form-control" />
            </div>
            <div class="form-group" style="margin:10px;">
                <label style="color:black;margin-left: 15px; margin-top:15px;"><b
                        class="p1">Profesion</b></label>
                <select style="background:#F6D7A7; border: solid 1px #F6EABE" class="form-select form-select-sm p1" name="profesion" required>
                    <option style="background:#F6EABE;" selected> </option>
                    <option style="background:#F6EABE;">Arquitecto</option>
                    <option style="background:#F6EABE;">Diseñador</option>
                    <option style="background:#F6EABE;">Tecnico</option>
                    <option style="background:#F6EABE;">Constructor</option>
                    <option style="background:#F6EABE;">Transportador</option>
                </select>
            </div>           

            <div class="form-group col s5" style="margin:10px;">
                <label style="margin-left: 15px; margin-top:15px; color:black">Valor</label>
                <!--<input type="number" style="color:black;margin-right:5px;" name="valorct" class="form-control" />-->
                <!--Cambios hechos para poner el signo peso-->
                <div>
                    <span style="position: absolute; margin-left: -2px; margin-top: 13px;">$</span>
                    <input type="number" style="padding-left: 8px;" name="valor" class="form-control">
                </div>
            </div> <!-- lo puedes poner con el signo pesos?-->


            <div id="hidden-inputs"></div>
            <div class="form-group">
                <button style="display: block; margin: 0 auto; margin-top:30px; margin-bottom:25px;"
                        class="btn btn-brown2 btn-block" type="submit">
                    Crear nuevo personal
                </button>
            </div>
        </form>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                $('.datepicker').datepicker();
            });
        </script>
    </div>
</div>