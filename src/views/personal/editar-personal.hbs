<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<div class="body">
    <nav class="nav-extended p1" style="background-color:#87AAAA; ">
        <div class="nav-wrapper">
            <a href="#" class=" brand-logo" style="margin-left: 20px; color:black;"><b>Konstructiva app</b></a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a style="color:white;" href="/proyecto/lista">Proyectos</a></li>
                <li><a style="color:white;" href="/cliente/lista">Clientes</a></li>
                <li><a style="color:rgb(255, 255, 255);" href="/ejecucion/personalt">Ejecucion</a></li>
                <li><a style="color:rgb(0, 0, 0);" href="/personal/lista">Personal</a></li>
                <li><a style="color:white;" href="/reportes/info-proyectos">Reportes</a></li>
                <li><a href="/login" class="btn btn-red"><b>Cerrar sesión</b> </a></li>
            </ul>
        </div>
        <div class="nav-content">
            <ul class="tabs tabs-transparent">
                <li class="tab">
                    <a style="color:rgb(255, 255, 255);" href="/personal/lista">Lista de personal</a>
                </li>
                <li class="tab">
                    <a class="active" style="color:white;" href="/personal/add">
                        Crear nuevo personal
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    {{#each errors}}
    <div class="ROBOTOSLAB">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{text}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    {{/each}}

    <div class="caja">
        <form action="/personal/editar-personal/{{personal.dataValues.id}}" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <h5 class="p1" style="color:black; margin-left:15px; margin-top:25px;"> <b>Editar personal</b></h5>

            <div class="form-group " style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px;color:black"><b><i>Número</i></b></label>
                <input type="number" style="margin-right:5px;" name="numero" class="form-control" autofocus
                    value="{{personal.dataValues.numero}}" />
            </div>

            <div class="form-group " style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px;color:black"><b><i>Nombre</i></b></label>
                <input type="text" style="margin-right:5px;" name="nombre" class="form-control"
                    value="{{personal.dataValues.nombre}}" />
            </div>

            <div class="form-group " style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px;color:black"><b><i>Cédula</i></b></label>
                <input type="number" style="margin-right:5px;" name="cedula" class="form-control"
                    value="{{personal.dataValues.cedula}}" />
            </div>

            <div class="form-group " style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px;color:black"><b><i>Profesión</i></b></label>
                <input type="text" style="margin-right:5px;" name="profesion" class="form-control"
                    value="{{personal.dataValues.profesion}}" />
            </div>


            <div class="form-group " style="margin:10px;">
                <label class="p1" style="margin-left: 15px; margin-top:15px;color:black"><b><i>Valor</i></b></label>
                <input type="number" style="margin-right:5px;" name="valor" class="form-control"
                    value="{{personal.dataValues.valor}}" />
            </div>

            <div class="form-group">
                <button style="color:black;display: block; margin: 0 auto; margin-top:30px; margin-bottom:25px;"
                    class="btn btn-brown btn-block" type="submit">
                    <b style="color:black">Editar</b>
                </button>
            </div>

        </form>
    </div>
</div>
</div>
</div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        $('.datepicker').datepicker();
    });
</script>