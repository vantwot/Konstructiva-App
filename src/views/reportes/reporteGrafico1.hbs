<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="body">
    <nav class="nav-extended" style="background-color:#87AAAA; ">
        <div class="nav-wrapper">
            <a href="#" class=" brand-logo" style="margin-left: 20px; color:black;">Konstructiva app</a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a style="color:white;" href="/proyecto/lista">Proyectos</a></li>
                <li><a style="color:white;" href="/cliente/lista">Clientes</a></li>
                <li><a style="color:white;" href="/ejecucion/contratost">Ejecucion</a></li>
                <li><a style="color:white;" href="collapsible.html">Personal</a></li>
                <li><a style="color:black;" href="/reportes/info-proyectos">Reportes</a></li>
                <a href="/login" class="btn btn-red">Cerrar sesión </a>

            </ul>
        </div>
        <div class="nav-content">
            <ul class="tabs tabs-transparent">
                <li class="tab"><a style="color:white;" href="/reportes/info-proyectos">Información de proyectos</a>
                </li>
                <li class="tab"><a class="active" style="color:white;" href="/reportes/info-contratost">Información de
                        contratos temporales</a></li>
                <li class="tab"><a style="color:black;" href="/reportes/info-grafica1">Información Gráfica</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="row" style="background-color: #F6D7A7;">
        {{#each proyectos}}
        <div class="col-md-3" style="margin:30px;">
            <div class="card" style="border: 5px solid #87AAAA; background:#F6EABE;">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">
                        <b class="p1">Nombre Proyecto </b>
                    </h6>
                    <p>
                        <i class="p1">{{this.dataValues.namep}}</i>
                    </p>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <b class="p1">Presupuesto</b>
                    </h6>
                    <p>
                        <i class="p1">{{this.dataValues.presupuesto}}</i>
                    </p>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <b class="p1">Anticipos</b>
                    </h6>
                    <p>
                        <i class="p1">{{this.dataValues.anticipo}}</i>
                    </p>
                    <canvas id="Grafica" width="10" height="10" aria-label="Proyectos" role="img"></canvas>
                    <script>
    let grafica=document.getElementById("Grafica").getContext("2d");

    var chart = new Chart(grafica,{
        type:"bar",
        data:{
            labels:["Presupuesto", "Anticipos"],
            datasets:[{
                label:"proyecto",
                backgroundColor:"rgb(0,0,0)",
                data:[100,52]
            }]
        }
    })
</script>
                </div>
            </div>
        </div>
        {{else}}
        <center>
            <div class="card mx-auto">
                <div class="card-body">
                    <p class="lead p1" style="text-align: center;">
                        Todavía no has creado ningún proyecto
                    </p>
                </div>
            </div>
        </center>
        {{/each}}
    </div>
</div>
